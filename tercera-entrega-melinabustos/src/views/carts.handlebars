<h1>Carrito</h1>

{{#if cart.length}}
  <table>
    <thead>
      <tr>
        <th>title</th>
        <th>price</th>
        <th>quantity</th>
      </tr>
    </thead>
    <tbody>
      {{#each cart}}
        <tr>
          <td>{{this.title}}</td>
          <td>{{this.price}}</td>
          <td>{{this.quantity}}</td>
          {{! ? }}
        </tr>
      {{/each}}
    </tbody>
  </table>

   <br>
  <div>
    <div>
      <button onclick="buyCart()">Completar compra</button>
    </div>
  </div>
  <script src="/js/product.js"></script>

{{else}}
  <p>No products in the cart</p>
{{/if}}